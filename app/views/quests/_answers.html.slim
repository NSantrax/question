- @quest.answers.each do |answer|
  -if answer.persisted?
    p= answer.body
    -if user_signed_in? && current_user == answer.user
        p= link_to 'Edit', '', class: 'edit-answer-link', data: {answer_id: answer.id}
        p
          = form_for [@quest, answer], remote: true, html: {id: "edit-answer-#{answer.id}"} do |f|
            = f.label :body, 'Answer'
            .answer-errors
            = f.text_area :body
            = f.submit 'Save'
        p= link_to 'Удалить ответ', [@quest, answer], method: :delete, data: { confirm: 'Вы уверены?' } 
        
