 <% if @comment.errors.present? %>
   <% @comment.errors.full_messages.each do |message| %>
      $('.comment-errors').html('<%= j message %>');
   <% end %>
    
   <% else %>
     <% if @comment.commentable_type == 'Quest' %>
       <% publish_to "/quests/#{@comment.commentable.id}/comments" do %>
         $('.quest-comments').html('<%= j render 'comments/list', parent: @comment.commentable %>');
       <% end %> 
       <% elsif @comment.commentable_type == 'Answer' %>
         <% publish_to "/quests/#{@comment.commentable.quest.id}/answers/#{@comment.commentable_id}/comments" do %>
           $('#answer-<%= @comment.commentable_id %> .answer-comments').html('<%= j render 'comments/list', parent: @comment.commentable %>');
         <% end %> 
    <% end %> 
       
    $('.new_comment #comment_body').val('');
     
 <% end %>
 

 
 
