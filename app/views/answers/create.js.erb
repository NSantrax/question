  <% if @answer.errors.present? %>
   <% @answer.errors.full_messages.each do |message| %>
      $('.answer-errors').html('<%= j message %>');
   <% end %>  
   <% else %> 
     <% publish_to "/quests/#{@quest.id}/answers" do %>
       $('.answers').html('<%= j render 'quests/answers' %>');
     <% end %>
     $('.new_answer #answer_body').val('');
     
<% end %>
 
